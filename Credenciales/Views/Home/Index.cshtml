@model Credenciales.Models.UserViewModel
@{
    ViewBag.Title = "Home Page";
    ViewBag.Render = "Login";
}
<section class="text-center bg-index d-flex justify-content-center align-items-center vh-100">

    <div class="card shadow-5-strong login contlogin">
        @using (Html.BeginForm("regLogin", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "basic-form" }))
        {
            <h2 class="fw-bold mb-5">BIENVENIDO</h2>

            <label for="form3Example2">USUARIO</label>
            <br />
            <input type="text" id="form3Example2" class="input-custume" name="usuario" />
            <br />
            <label for="form3Example4">CONTRASEÑA</label>
            <br />
            <input type="password" id="form3Example4" class="input-custume" name="contra" />
            <br />
            <button type="submit" class="btn btn-primary btn-block mb-4">
                Iniciar sesión
            </button>
        }
    </div>

</section>
